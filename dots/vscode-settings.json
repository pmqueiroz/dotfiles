{  
    "extensions.ignoreRecommendations": true,
    "security.workspace.trust.untrustedFiles": "open",
    "diffEditor.ignoreTrimWhitespace": false,
    "symbols.hidesExplorerArrows": false,
    "breadcrumbs.enabled": false,
    "update.showReleaseNotes": false,
    "update.mode": "start",
    "window.commandCenter": false,
    "window.titleBarStyle": "custom",
    "window.zoomLevel": 1,
    "window.density.editorTabHeight": "compact",
    "workbench.editor.labelFormat": "short",
    "workbench.editor.empty.hint": "hidden",
    "workbench.productIconTheme": "fluent-icons",
    "workbench.statusBar.visible": false,
    "workbench.iconTheme": "material-icon-theme",
    "workbench.colorTheme": "Aura Soft Dark",
    "workbench.startupEditor": "none",
    "explorer.fileNesting.enabled": true,
    "explorer.confirmDragAndDrop": false,
    "explorer.confirmDelete": false,
    "explorer.compactFolders": false,
    "explorer.sortOrder": "foldersNestsFiles",
    "editor.accessibilitySupport": "off",
    "editor.tabSize": 2,
    "editor.hideCursorInOverviewRuler": true,
    "editor.parameterHints.enabled": false,
    "editor.cursorStyle": "line-thin",
    "editor.cursorBlinking": "expand",
    "editor.minimap.enabled": false,
    "editor.detectIndentation": true,
    "editor.renderLineHighlight": "gutter",
    "editor.suggestSelection": "first",
    "editor.suggest.preview": true,
    "editor.suggest.showDeprecated": true,
    "editor.inlineSuggest.enabled": true,
    "editor.bracketPairColorization.enabled": true,
    /* Font configuration */
    "editor.fontLigatures": true,
    "editor.fontSize": 19,
    "editor.lineHeight": 26,
    /* Terminal Interface */
    "terminal.integrated.cursorStyle": "underline",
    "terminal.integrated.fontSize": 16,
    "terminal.integrated.gpuAcceleration": "on",
    "terminal.integrated.defaultLocation": "editor",
    "terminal.integrated.shellIntegration.enabled": false,
    "terminal.integrated.enableMultiLinePasteWarning": "never",
    "terminal.integrated.profiles.linux": {
        "yarn": {
            "path": "zsh",
            "icon": "flame",
            "color": "terminal.ansiRed",
            "overrideName": true,
            "args": [
                "--beep"
            ]
        },
        "git": {
            "path": "zsh",
            "icon": "git-pull-request",
            "color": "terminal.ansiGreen",
            "overrideName": true
        },
        "peam": {
            "path": "zsh",
            "icon": "heart",
            "color": "terminal.ansiMagenta",
            "overrideName": true,
            "args": [
                "--beep"
            ]
        }
    },
    "terminal.integrated.defaultProfile.linux": "peam",
    "terminal.integrated.enableBell": true,
    "terminal.integrated.enablePersistentSessions": false,
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    /* Linting and intellisense */
    "emmet.syntaxProfiles": {
        "javascript": "jsx"
    },
    "emmet.includeLanguages": {
        "javascript": "javascriptreact"
    },
    "editor.codeActionsOnSave": {
        "source.fixAll": "explicit",
        "source.sortImports": "never"
    },
    /* Language configuration */
    "javascript.updateImportsOnFileMove.enabled": "always",
    "typescript.updateImportsOnFileMove.enabled": "always",
    "javascript.suggest.autoImports": true,
    "typescript.suggest.autoImports": true,
    "typescript.inlayHints.parameterNames.enabled": "literals",
    "typescript.inlayHints.variableTypes.enabled": false,
    "typescript.inlayHints.functionLikeReturnTypes.enabled": false,
    "typescript.inlayHints.propertyDeclarationTypes.enabled": false,
    "files.associations": {
        "*.mdx": "markdown",
        ".prettierrc": "json"
    },
    /* Extensions and Modules configuration */
    "apc.activityBar": {
        "position": "bottom",
        "hideSettings": true,
        "size": 48,
        "itemMargin": 8,
        "itemSize": 32
    },
    "apc.header": {
        "height": 36
    },
    "apc.listRow": {
        "height": 24
    },
    "apc.font.family": "Inter",
    "apc.stylesheet": {             
        ".title-label": "display: none",
        ".editor-actions": "display: none",
        ".nosidebar .inline-tabs-placeholder": "width: 75px",
        ".pane-header": "padding: 0 8px",
        ".window-appicon": "display: none",
        ".window-title": "display: none",
        ".menubar": "padding-left: 8px",
        ".menubar-menu-button": "opacity: 0",
        ".menubar-menu-button:hover": "opacity: 1",
        ".actions-container": "justify-content: flex-start!important"
    },
    "material-icon-theme.folders.associations": {
        "fake": "mock",
        "infra": "app",
        "schema": "class",
        "http": "container",
        "entities": "class",
        "dtos": "typescript",
        "typeorm": "database",
        "migrations": "tools",
        "context": "animation",
        "modules": "components",
        "implementations": "core",
        "repositories": "mappings",
        "components": "react-components",
        "lottie": "animation",
        ".jest": "config",
        "cypress": "config",
        "deploy": "config",
        "mock-api": "mock",
        ".next": "dist",
        "devtools": "tools",
        "blog": "content"
    },
    "material-icon-theme.files.associations": {
        "tsconfig.json": "tune",
        "ormconfig.json": "database",
        "*.template.svg": "ejs",
        "*.u": "../../icons/umbra-moon",
        "*.umb": "../../icons/umbra-moon",
        "*.ub": "../../icons/umbra-moon"
    },
    "cSpell.language": "en,pt",
    "cSpell.userWords": [
        "bootcamp",
        "borderless",
        "bracestack",
        "cellptr",
        "challengeid",
        "cleiton",
        "cnpj",
        "codeptr",
        "Confirmers",
        "hocs",
        "ispb",
        "Linkedin",
        "marguerita",
        "maxlength",
        "monospace",
        "pmqueiroz",
        "PTBR",
        "Reactars",
        "rehype",
        "repos",
        "roboto",
        "roboto slab",
        "slab",
        "stackoverflow",
        "storaged",
        "testid",
        "typeorm",
        "unform",
        "uuidv",
        "varchar"
    ],
    "cSpell.enabledLanguageIds": [
        "csharp",
        "go",
        "javascript",
        "javascriptreact",
        "markdown",
        "php",
        "plaintext",
        "typescript",
        "typescriptreact",
        "yml",
        "lua"
    ],
    "github.copilot.inlineSuggest.enable": true,
    "github.copilot.enable": {
        "*": true,
        "yaml": false,
        "plaintext": false,
        "markdown": false,
        "javascript": true
    },
    "eslint.rules.customizations": [
        {
            "rule": "react-hooks/exhaustive-deps",
            "severity": "off"
        }
    ]
}
